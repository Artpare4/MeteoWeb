{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="main">
    <form method="post">
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div class="main">
            <h1 class="titreContent">Connexion</h1>
            <div class="formRow">
                <label class="formlabel"  for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="formWidget" autocomplete="email" required autofocus>
            </div>
            <div class="formRow">
                <label class="formlabel" for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="formWidget" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn-lg btn-primary" type="submit">
                Connexion
        </button>
        </div>
    </form>
</div>
{% endblock %}
